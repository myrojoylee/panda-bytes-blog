<div class="post-wrapper">
  <section class="new-post-card">
    <h3>Update Post:</h3>

    <form class="update-post-form">
      <article class="new-post-group">
        <label for="post-title">Post Title:</label>
        <textarea
          class="form-input"
          type="text"
          id="update-title"
          name="update-title"
        >{{title}}</textarea>
      </article>
      <article class="post-detail-group">
        <label for="post-detail">Type details below:</label>
        <textarea
          class="update-detail"
          id="update-detail"
          name="update-detail"
        >{{detail}}</textarea>
      </article>
      <article class="form-group">
        <button type="submit" class="updatePostBtn">Update Post</button>
      </article>
    </form>
  </section>

  <script src="/js/post.js"></script>