<p class="notice">In order to post anything or view your dashboard, you must log
  in.</p>
<div class="main-form-wrapper">

  <section class="login-wrapper">
    <h2>Login</h2>

    <form class="login-form">
      <article class="form-group">
        <label for="email-login">email:</label>
        <input class="form-input" type="text" id="email-login" />
      </article>
      <article class="form-group">
        <label for="password-login">password:</label>
        <input class="form-input" type="password" id="password-login" />
      </article>
      <article class="form-group">
        <button class="submitBtn" type="submit">login</button>
      </article>
    </form>

    <a href="./signup">sign up instead</button>
  </section>

</div>

<script src="./js/login.js"></script>
<script src="./js/signup.js"></script>