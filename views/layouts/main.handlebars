          {{else}}
            <a href="/login">login</a>
          {{/if}}
        </nav>
      </header>
      <main>
        {{{body}}}
      </main>
      <footer>
        <h3>My awesome footer</h3>
      </footer>
    </div>

    {{#if logged_in}}
      <script src="../../public/js/logout.js"></script>
    {{/if}}
  </body>

</html>