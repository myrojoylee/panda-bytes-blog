<section class="card-wrapper">
  <h3>Create a New Post:</h3>

  <form class="form">
    <article class="new-post-form">
      <label for="post-title">Post Title:</label>
      <input class="form-input" type="text" id="post-title" name="post-title" />
    </article>
    <article class="new-post-form">
      <label for="card-detail">Type the details below:</label>
      <textarea
        class="card-detail"
        id="post-detail"
        name="post-detail"
      ></textarea>
    </article>
    <article>
      <button type="submit" class="submitPostBtn">Submit Post</button>
    </article>
  </form>
</section>

<script src="/js/new-post.js"></script>