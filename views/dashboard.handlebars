<section class="card-wrapper">
  <article>
    <h2>Welcome, <span class="current-user">{{username}}</span>!</h2>
  </article>

  {{#if posts.length}}
    <article class="card-wrapper">
      <h3>Current Posts:</h3>

      {{#each posts as |post|}}

        <div class="card">
          <h4 class="card-header">
            <a href="/dashboard/post/{{id}}" data-id="{{id}}">

              {{id}}:
              {{title}}
            </a>
            <p>{{{format_date date_created}}}</p>
          </h4>
        </div>
      {{/each}}
    </article>
  {{/if}}
  <a href="/new-post" class="add-new-post">+</a>
</section>