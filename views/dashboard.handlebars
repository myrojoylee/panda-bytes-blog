<div class="row">
  <div class="col-auto">
    <h2>Welcome, {{username}}!</h2>
  </div>
</div>

<div class="post-wrapper">
  <section class="new-post-card">
    <h3>Create a New Post:</h3>

    <form class="new-post-form">
      <article class="new-post-group">
        <label for="post-title">Post Title:</label>
        <input
          class="form-input"
          type="text"
          id="post-title"
          name="post-title"
        />
      </article>
      <article class="post-detail-group">
        <label for="post-detail">Type the details below:</label>
        <textarea
          class="post-detail"
          id="post-detail"
          name="post-detail"
        ></textarea>
      </article>
      <article class="form-group">
        <button type="submit" class="submitBtn">Post</button>
      </article>
    </form>
  </section>

  {{#if posts.length}}
    <section class="post-list">
      <h3>Current Posts:</h3>

      {{#each posts as |post|}}
        <div class="">
          <div class="">
            <h4><a href="/post/{{post.id}}">{{post.title}}</a></h4>
          </div>
          <div class="">
            <button class="deleteBtn" data-id="{{post.id}}">DELETE</button>
          </div>
        </div>
      {{/each}}
    </section>
  {{/if}}
</div>

<script src="./js/profile.js"></script>